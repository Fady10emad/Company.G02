@model FrogetPasswordDto
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m-3 alert alert-danger"></div>
		<form asp-action="SendResetPasswordUrl" method="post">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input type="submit" value="ForgetPassword">
		</form>
		<p>Already have an Account? <a asp-action="SignIn"> SignIn</a></p>
	</div>
