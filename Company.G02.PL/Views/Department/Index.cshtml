@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">All Departments</h1>

<a asp-action="Create" asp-controller="Department" class="btn btn-primary mb-3">Create Department</a>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this department?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger mt-5" role="alert">
        There are no departments.
    </div>
}
